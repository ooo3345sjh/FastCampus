package ch14;

public class Person {
	String name;
	int money;
	
	public Person(String name, int money) {
		this.name = name;
		this.money = money;
	}
	
	public void takeBus(Bus bus) {
		
		this.money -= 1000;
		bus.earningsBus();
	}
	
	public void takeSubway(Bus bus) {
		
		this.money -= 1200;
		bus.earningsBus();
	}
	
}
