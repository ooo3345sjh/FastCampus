package ch08;

public class Person {

	public int height;
	public int weight;
	public int gender;
	public String name;
	
	
	
	public Person() {}
	
	public Person(int studentNumber, String studentName, int grade) {
		this.studentName = studentName;
		this.studentNumber = studentNumber;
		this.grade = grade;
	}
	
	public String showStudentInfo() {
		return studentName + "학번 학생의 학번은 " + studentNumber + "이고, 학년은 " + grade + "입니다.";
	}
}
