package ch14;

import java.io.*;

public class Test {
	public static void main(String[] args) throws IOException {
		InputStream r = new FileInputStream("db.properties");
		InputStreamReader isr = new InputStreamReader(r)
		BufferedInputStream br = new BufferedInputStream(r);
			
		while(true) {
			String data = br.read();
			if(data == null) break;
			System.out.println(data);
		}
		br.close();
	}
}
